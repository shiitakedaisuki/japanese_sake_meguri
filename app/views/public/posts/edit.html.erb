<h1>投稿編集</h1>
<!--form_withは、rootでnamespaceを使っていたらモデルとurlを指定しないといけない-->
  <%= form_with model: @post, url: public_posts_path(@post), method: :patch do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>お酒の名前</h4>
      <%= f.text_field :name %>
    <h4>レビュー</h4>
      <%= f.text_area :review %>
    <%= f.submit '更新' %>
  <% end %>