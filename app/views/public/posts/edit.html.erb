<h1>投稿編集</h1>
<% if @post.errors.any? %>
  <div class = "alert">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="edit-post-form">

  <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
    <% if @post.image.attached? %>
      <div class="current-image">
        <p>現在の画像はこちら</p>
        <%= image_tag url_for(@post.image), size: "100x100" %>
      </div>
    <% else %>
      <p>現在の画像はありません</p>
    <% end %>
    <div class="file-upload">
      <p>ファイルを変更する場合はこちら</p>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-field">
      <h4>お酒の名前</h4>
      <%= f.text_field :name %>
    </div>
    <div class="form-field">
      <h4>レビュー</h4>
      <%= f.text_area :review %>
    </div>
    <div class="submit-button">
      <%= f.submit '更新', class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

<style>
.edit-post-form {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  background-color: #F4EEE0;
  border-radius: 10px;
}

.edit-post-form h1 {
  text-align: center;
  margin-bottom: 20px;
  color: #4CAF50;
}

.current-image {
  margin-bottom: 20px;
}

.file-upload {
  margin-bottom: 20px;
}

.form-field {
  margin-bottom: 20px;
}

.form-field h4 {
  margin: 0;
}

.submit-button {
  text-align: center;
}

.btn.btn-outline-secondary {
  background-color: transparent;
  color: #4CAF50;
  border: 1px solid #4CAF50;
  padding: 8px 16px;
  border-radius: 5px;
}

.btn.btn-outline-secondary:hover {
  background-color: #4CAF50;
  color: #fff;
}

.btn.btn-outline-secondary:active {
  transform: translateY(1px);
}

.btn.btn-outline-secondary:focus {
  outline: none;
  box-shadow: none;
}
</style>