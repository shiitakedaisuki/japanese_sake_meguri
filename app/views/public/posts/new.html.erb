<h1>新規投稿フォーム</h1>

<!--form_withは、rootでnamespaceを使っていたらモデルとurlを指定しないといけない-->
  <%= form_with model: @post,url: posts_path do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>お酒の名前</h4>
      <%= f.text_field :name %>
    <h4>レビュー</h4>
      <%= f.text_area :review %>
    <h4>ジャンル</h4>
      <%= f.select :genre_name, Genre.all.pluck(:name) %>
    <%= f.submit '投稿' %>
  <% end %>