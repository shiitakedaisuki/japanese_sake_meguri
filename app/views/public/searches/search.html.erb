<h2>検索結果</h2>
<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.user_name %>
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image(100, 100), class: "user-profile-image" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.name %>
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.get_image(100, 100), class: "post-image" %>
              <% end %>
          </td>
          <td><%= post.review %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>