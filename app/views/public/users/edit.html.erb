<style>
  .profile-edit-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    background-color: #F4EEE0;
    border-radius: 10px;
  }

  .profile-edit-container h2 {
    text-align: center;
    margin-bottom: 20px;
  }

  .profile-edit-container label {
    display: block;
    margin-bottom: 5px;
  }

  .profile-edit-container input[type="text"],
  .profile-edit-container input[type="file"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
  }

  .profile-edit-container p {
    margin-top: 10px;
    font-style: italic;
  }

  .profile-edit-container img {
    display: block;
    max-width: 100px;
    max-height: 100px;
    margin-top: 10px;
    border-radius: 5px;
  }

  .profile-edit-container button[type="submit"] {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
</style>

<div class="profile-edit-container">
  <h2>プロフィール編集</h2>
  <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
    <label for="inputName">ユーザー名</label>
    <%= f.text_field :user_name, autofocus: true, id: "inputName", placeholder: "ユーザーネーム" %>
    <label for="inputImage">プロフィール画像</label><br>
    プロフィール画像を変更する場合はこちら
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    <% if @user.profile_image.attached? %>
      <p>現在のプロフィール画像</p>
      <%= image_tag @user.profile_image, size: "100x100" %>
    <% else %>
      <p>現在の画像はありません</p>
    <% end %><br>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>